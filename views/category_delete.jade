extends layout

block content

  h1 #{title}: #{category.name}
  p= category.lifespan

  if category_parts.length > 0

    p #[strong Delete the following parts before attempting to delete this category.]
    div(style='margin-left:20px;margin-top:20px')
      h4 Parts
      dl
        each part in category_parts
          dt
            a(href=part.url) #{part.title}
          dd #{part.summary}

  else
    p Do you really want to delete this category?

    form(method='POST')
      div.form-group
        input#categoryid.form-control(type='hidden', name='categoryid', value=category._id )

      button.btn.btn-primary(type='submit') Delete
