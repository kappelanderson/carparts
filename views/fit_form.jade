
extends layout

block content

  h1 #{title}

  form(method='POST' action="/catalog/fit/create" enctype="multipart/form-data")
    div.form-group
      label(for='name') Fit:
      input#name.form-control(type='text', name='name' required value=(undefined===fit ? '' : fit.name) )
      input#fit.form-control(type='file', name='photo' value=(undefined===fit ? '' : fit.photo) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
